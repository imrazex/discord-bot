{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Poetry Run",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/discord_bot/app.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "args": [],
            "justMyCode": true,
            "autoReload": {
                "enabled": true,
                "exclude": [
                    "${workspaceFolder}/.venv/**"
                ]
            }
        }
    ]
}
